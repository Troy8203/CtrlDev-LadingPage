---
import Blog from "@layouts/blog.astro";
import { cursosRoutes } from "src/routes/routes";
import type { MarkdownLayoutProps } from "astro";

type Props = MarkdownLayoutProps<{
  title: string;
  author: string;
  date: string;
}>;

export function getStaticPaths() {
  const routes = cursosRoutes;
  return routes;
}

const { slug } = Astro.params;

const base = Astro.site?.pathname;
const site: URL | string = Astro.site ? Astro.site : "";

const { title, date, author } = Astro.props.frontmatter;
---

<Blog title={title} date={date} autor={author}>
  <slot />
</Blog>
