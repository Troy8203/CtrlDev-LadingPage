---
import Logo from "../../assets/logo.svg";
---

<div
  class="relative grow w-96 h-96 flex items-center justify-center bg-orange-400"
>
  <Logo class="blob main h-auto w-96 z-10 rounded-none! bg-transparent! p-5" />
  <div class="blob main w-96 h-96"></div>
  <div class="blob float1 w-24 h-24"></div>
  <div class="blob float2 w-20 h-20"></div>
  <div class="blob float3 w-16 h-16"></div>
</div>

<style>
  .blob {
    position: absolute;
    background: white;
    border-radius: 50%;
  }

  .blob.main {
    animation: centerFloat 6s ease-in-out infinite;
  }

  .blob.float1 {
    animation: outFloat 9s ease-in-out infinite;
  }
  .blob.float2 {
    animation: outFloat 17s ease-in-out 1s infinite;
  }
  .blob.float3 {
    animation: outFloat 16s ease-in-out 0.5s infinite;
  }

  @keyframes centerFloat {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }
    25% {
      transform: translate(0, -15px) scale(1.05);
    }
    50% {
      transform: translate(0, 10px) scale(0.95);
    }
    75% {
      transform: translate(0, -5px) scale(1.02);
    }
  }

  @keyframes outFloat {
    0%,
    100% {
      transform: translate(0, 0) scale(1);
    }
    20% {
      transform: translate(160px, -150px) scale(1.3);
    }
    40% {
      transform: translate(-170px, 170px) scale(1.9);
    }
    60% {
      transform: translate(150px, 160px) scale(1.5);
    }
    80% {
      transform: translate(-150px, -140px) scale(1);
    }
  }
</style>
