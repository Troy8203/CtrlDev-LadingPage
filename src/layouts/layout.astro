---
import "../styles/global.css";
import Navbar from "./navbar.astro";

//Favicons
const base = Astro.site ? `${Astro.url}` : "";

const favicon96x96 = `${base}assets/favicon/favicon-96x96.png`;
const faviconSvg = `${base}assets/favicon/favicon.svg`;
const faviconIco = `${base}assets/favicon/favicon.ico`;
const faviconApple = `${base}assets/favicon/apple-touch-icon.png`;
const faviconManifest = `${base}assets/favicon/site.webmanifest`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href={favicon96x96} sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href={faviconSvg} />
    <link rel="shortcut icon" href={faviconIco} />
    <link rel="apple-touch-icon" sizes="180x180" href={faviconApple} />
    <link rel="manifest" href={faviconManifest} />
    <meta name="generator" content={Astro.generator} />
    <title>Ctrl + Dev</title>
  </head>
  <body class="h-screen">
    <Navbar />
    <slot />
  </body>
</html>
